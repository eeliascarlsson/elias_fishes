{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
